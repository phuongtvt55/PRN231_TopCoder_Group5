<script>
    $(document).ready(function () {
    });

    function removeJob(jobId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "https://localhost:44300/api/Jobs/" + jobId,
                    type: "DELETE",
                    contentType: "application/json;charset=UTF-8",
                    dataType: "json",
                    success: function (result) {
                        Swal.fire(
                            'Deleted!',
                            'Your job has been deleted.',
                            'success'
                        ).then(() => {
                            location.reload();
                        })
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        })

    }

    //Job-feature
    $(".job-feature").slice(0, 4).show();

    $(".loadMore").on("click", function () {
        $(".job-feature:hidden").slice(0, 4).show();
        if ($(".job-feature:hidden").length == 0) {
            $(".loadMore").fadeOut();
        }
    })

    //Job-FullTime
    $(".job-fulltime").slice(0, 2).show();

    $(".loadFull").on("click", function () {
        $(".job-fulltime:hidden").slice(0, 2).show();
        if ($(".job-fulltime:hidden").length == 0) {
            $(".loadFull").fadeOut();
        }
    })
    //JobPartTime
    $(".job-parttime").slice(0, 2).show();

    $(".loadPart").on("click", function () {
        $(".job-parttime:hidden").slice(0, 2).show();
        if ($(".job-parttime:hidden").length == 0) {
            $(".loadPart").fadeOut();
        }
    })

    $(".statusButton").click(function () {
        var id = $(this).data("id");
        var buttonValue = $(this).val();

        var confirmText = buttonValue === "Accept" ? "Yes, accept it!" : "Yes, deny it!";
        var successText = buttonValue === "Accept" ? "Job Application has been accepted." : "Job Application has been denied.";
        var icon = buttonValue === "Accept" ? "success" : "error";

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: confirmText
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/JobApplication/UpdateStatus/" + id + "?Status=" + buttonValue,
                    type: "GET",
                    success: function (result) {
                        Swal.fire(
                            buttonValue + '!',
                            successText,
                            icon
                        ).then(() => {
                            location.reload();
                        })
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        });
    });
</script>
