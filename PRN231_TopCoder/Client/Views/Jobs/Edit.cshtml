            <div class="container-form">
                <div class="card-form">
                    <h1 class="card_title">Post a job</h1>
                    <form class="card_form" asp-action="Edit">
                        <input type="hidden" asp-for="JobId" />
                        <div class="input">
                            <input asp-for="JobTitle" type="text" class="input_field" id="JobTitle" />
                            <label class="input_label">Job title</label>

                        </div>
                        <div class="input">
                            <textarea id="edit" asp-for="JobDetail" name="jobdetail" id="JobDetail"></textarea>
                            <label class="input_label">Job detail</label>

                        </div>
                        <div class="input">
                            <input asp-for="Address" type="text" class="input_field" id="Address" />
                            <label class="input_label">Address</label>

                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <div class="input">
                                <input type="text" class="input_field" name="SalaryFrom" id="SalaryFrom" value="@ViewBag.SalaryFrom"/>
                                <label class="input_label fix">Salary from</label>
                            </div>
                            <div class="input">
                                <input type="text" class="input_field" name="SalaryTo" id="SalaryTo" value="@ViewBag.SalaryTo"/>
                                <label class="input_label">Salary to</label>
                            </div>
                        </div>
                        <div class="input mt-3">
                            <input asp-for="JobRequirement" type="text" class="input_field" id="JobRequirement" />
                            <label class="input_label">JobRequirement</label>

                        </div>
                        <div class="input mt-3">
                            <input asp-for="Website" type="text" class="input_field" id="Website" />
                            <label class="input_label">Website</label>

                        </div>
                        <div class="input mt-3">
                            <input asp-for="Skills" type="text" class="input_field" id="Skills" />
                            <label class="input_label">Skills</label>

                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <div class="input">
                                <input asp-for="Nationality" type="text" class="input_field" id="Nationality" />
                                <label class="input_label fix">Nationality</label>

                            </div>
                            <div class="input">
                                <input asp-for="YearExperience" type="text" class="input_field" id="YearExperience" />
                                <label class="input_label">YearExperience</label>

                            </div>
                            <div class="input">
                                <select asp-for="ContractType" class="form-control">
                                    <option>Full Time</option>
                                    <option>Part Time</option>
                                </select>
                            </div>
                        </div>
                        <div class="input">
                            <div class="">
                                <label class="">Category</label>
                                <select name="category" id="category" multiple>                                   
                                    @foreach (var item in ViewBag.Category)
                                    {
                                        var check = false;
                                        @foreach(var jobCate in ViewBag.JobCategory)
                                        {
                                            if(item.CategoryId == jobCate.CategoryId)
                                            {
                                                <option selected value="@item.CategoryId">@item.CategoryName</option>
                                                check = true;
                                            }
                                        }
                                        if(!check)
                                        {
                                            <option value="@item.CategoryId">@item.CategoryName</option>
                                        } 
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="input">
                            <div class="">
                                <label class="">Rank</label>
                                <select name="rank" id="rank" multiple>
                                    @foreach (var item in ViewBag.Rank)
                                    {
                                        var check = false;
                                        @foreach(var jobRank in ViewBag.JobRank)
                                        {
                                            if(item.RankId == jobRank.RankId)
                                            {
                                                <option selected value="@item.RankId">@item.RankName</option>
                                                check = true;
                                            }                                            
                                        }
                                        if(!check)
                                        {
                                            <option value="@item.RankId">@item.RankName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <button class="card_button">Update Job</button>
                    </form>
