    <script>
        $(".card_form").submit(function (e) {
            e.preventDefault();
            var html = '';
            var title = $('#JobTitle').val();
            var yearExperience = $('#YearExperience').val();
            var nationality = $('#Nationality').val();
            var skills = $('#Skills').val();
            var website = $('#Website').val();
            var jobRequirement = $('#JobRequirement').val();
            var salaryTo = $('#SalaryTo').val();
            var salaryFrom = $('#SalaryFrom').val();
            var address = $('#Address').val();
            var jobDetail = $('#JobDetail').val();

            var fieldsToCheck = [jobDetail, address, salaryFrom, salaryTo, jobRequirement, website, skills, nationality, yearExperience, title];
            var fieldsToShow = ["JobDetail", "Address", "SalaryFrom", "SalaryTo", "JobRequirement", "Website", "Skills", "Nationality", "YearExperience", "Title"];
            var errorMessage = "";

            for (var i = fieldsToCheck.length - 1; i >= 0; i--) {
                if (fieldsToCheck[i] === "") {
                    errorMessage = '<b>' + '<span style="color: red;">' + fieldsToShow[i] + '</span>' + ' cannot be blank<br></b>' + errorMessage;
                    $(`#${fieldsToShow[i]}`).css('border-color', 'Red');
                } else {
                    $(`#${fieldsToShow[i]}`).css('border-color', 'lightgrey');
                }
            }

            if (isNaN(salaryFrom) || salaryFrom <= 0) {
                errorMessage += '<b>' + '<span style="color: red;">Salary From</span>' + ' must be number and greater than 0<br></b>';
                $('#SalaryFrom').css('border-color', "Red");
            } else {
                $('#SalaryFrom').css('border-color', "lightgrey");
            }
            if (isNaN(salaryTo) || salaryTo <= 0) {
                errorMessage += '<b>' + '<span style="color: red;">Salary To</span>' + ' must be number and greater than 0<br></b>';
                $('#SalaryTo').css('border-color', "Red");
            } else {
                $('#SalaryTo').css('border-color', "lightgrey");
            }
            if (isNaN(yearExperience) || yearExperience <= 0) {
                errorMessage += '<b>' + '<span style="color: red;">Year experience</span>' + ' must be number and greater than 0<br></b>';
                $('#YearExperience').css('border-color', "Red");
            } else {
                $('#YearExperience').css('border-color', "lightgrey");
            }
            if (salaryFrom >= salaryTo) {
                errorMessage += '<b><span style="color: red;">Salary From</span> must be less than <span style="color: red;">Salary To</span></b>';
            }

            if (errorMessage !== "") {
                html += errorMessage;
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: `Some feild wrong!!!`,
                    footer: html
                })
            } else {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 1000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }
                })
                Toast.fire({
                    icon: 'success',
                    title: 'Update job successfully'
                }).then(() => {
                    this.submit();
                })
            }
        });

    </script>
