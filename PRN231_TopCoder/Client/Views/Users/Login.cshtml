@using Microsoft.AspNetCore.Http;
@model UserService.Models.UserLoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var role = Context.Session.GetString("MyRole");
}
<head>
	<link rel="stylesheet" href="~/css/form-style.css">
</head>
<body>
	<div class="wrapper">
		<div class="image-holder">
			<img src="img/banner_login.jpg" alt="">
		</div>
		<div class="form-inner">
			<form class="form-container" asp-action="Login" method="post" enctype="multipart/form-data">
				<div class="form-logo">
					<img src="img/logo_title.png" alt="" class="form-img-logo">
				</div>
				<div class="form-header">
					<h3 class="form-title">Login to continue</h3>
					<img src="img/sign-up.png" alt="" class="sign-up-icon">
					<h4>Only for @role</h4>
				</div>
				<div class="form-group">
					<label for="">E-mail:</label>
					<input asp-for="Email" type="text" class="form-control" data-validation="email">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="">Password:</label>
					<input asp-for="Password" type="password" class="form-control" data-validation="length" data-validation-length="min6">
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<button>Log in</button>

				<p class="no_account">
					Do not have an account ?<a asp-action="Register" class="link_to_login">Sign up</a>
				</p>
			</form>
		</div>

	</div>
</body>