@using Microsoft.AspNetCore.Http;
@model UserService.Models.User
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var role = Context.Session.GetString("MyRole");
}
<head>
	<link rel="stylesheet" href="~/css/form-style.css">
</head>
<body>
	<div class="wrapper">
		<div class="image-holder">
			<img src="img/banner.jpg" alt="">
		</div>
		<div class="form-inner">
			<form class="form-container" action="" method="post" enctype="multipart/form-data">
				<div class="form-logo">
					<img src="img/logo_title.png" alt="" class="form-img-logo">
				</div>
				<div class="form-header">
					<h3 class="form-title">Sign up</h3>
					<img src="img/sign-up.png" alt="" class="sign-up-icon">
				</div>
				<div class="form-group">
					<label for="">Full Name:</label>
					<input asp-for="UserName" type="text" class="form-control" data-validation="length alphanumeric" data-validation-length="3-12">
				</div>
				<div class="form-group">
					<label for="">E-mail:</label>
					<input asp-for="Email" type="text" class="form-control" data-validation="email">
				</div>
				<div class="form-group">
					<label for="">Password:</label>
					<input asp-for="Password" type="password" class="form-control" data-validation="length" data-validation-length="min8">
				</div>
				<div class="form-group">
					<label for="">Address:</label>
					<input asp-for="Address" type="text" class="form-control" data-validation="length alphanumeric">
				</div>
				<div class="form-group">
					<label for="">Phone Number:</label>
					<input asp-for="Phone" type="tel" class="form-control" data-validation="phone">
				</div>
				@if (role == "Employer")
				{
					<div class="form-group">
						<label for="">Company Name:</label>
						<input asp-for="BusinessProfile.CompanyName" type="text" class="form-control" data-validation="length alphanumeric">
					</div>
				}
				<button>create my account</button>

				<p class="have_account">
					Did you have an account ? <a asp-action="Login" class="link_to_login">Login</a>
				</p>
			</form>
		</div>

	</div>
</body>

